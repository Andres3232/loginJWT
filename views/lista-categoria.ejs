<%-include ('./partials/header'); %>
  <br>
  <div class="row container centered" width="100vw">
    <div class="text-center">
      <h2>Tabla de Categoria</h2>
    </div>
    <br>
    <br>
    <br>
    <table class="table table-hover">
      <thead>
        <th scope="col">id categoria</th>
        <th scope="col">Nombre Categoria</th>
      

      </thead>
      <tbody>
        <% category.forEach(function(category) { %>
          <tr>
            <td>
              <%= category.id %>
            </td>
            <td>
              <%= category.name %>
            </td>
            
            <td>
              <div class="row">
                <div class="row">
                  <form action="./edit-categoria" method="GET">
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <button type="submit" class="btn edit-btn"><i class="bi bi-pencil"></i></button>
                  </form>
                </div>
                <div class="row"></div>
                <div class="row">
                  <form action="./delete-categoria" method="POST">
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <button type="submit" class="btn delete-btn"><i class="bi bi-trash"></i></button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
    <br>
    <br>
    <div class="float-start">
      <a href="./add-categoria" class="btn primary-btn">Agregar Categoria</a>
    </div>
  </div>
  <%-include ('./partials/footer'); %>
