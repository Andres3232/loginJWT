<%-include ('./partials/header'); %>
  <br>
  <div class="row container centered" width="100vw">
    <div class="text-center">
      <h2>Tabla de Usuarios</h2>
    </div>
    <br>
    <br>
    <br>
    <table class="table table-hover">
      <thead>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Telefono</th>
        <th scope="col">Ciudad</th>
        <th scope="col">Estado</th>
        <th scope="col">Creacion</th>
        <th scope="col">Actualizar</th>
        <th scope="col">Estado</th>
      </thead>
      <tbody>
        
        <% users.forEach(function(user) { %>
          <tr>
            <td>
              <%= user.username %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.Telefono %>
            </td>
            <td>
              <%= user.Ciudad %>
            </td>
            <td>
              <%= user.Estado %>
            </td>
            <td>
              <%= user.created_at.toLocaleDateString() %>
                <%= user.created_at.toLocaleTimeString() %>
            </td>
            <td>
              <%= user.updated_at.toLocaleDateString() %>
                <%= user.updated_at.toLocaleTimeString() %>
            </td>
            <td>
              <div class="row">
                <div class="row">
                  <form action="./edit" method="GET">
                    <input type="hidden" name="id" value="<%= user.id %>">
                    <button type="submit" class="btn edit-btn"><i class="bi bi-pencil"></i></button>
                  </form>
                </div>
                <div class="row"></div>
                <div class="row">
                  <form action="./delete-user" method="POST">
                    <input type="hidden" name="id" value="<%= user.id %>">
                    <button type="submit" class="btn delete-btn"><i class="bi bi-trash"></i></button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
    <br>
    <br>
    <div class="float-start">
      <a href="./add" class="btn primary-btn">Agregar usuario</a>
    </div>
  </div>
  <%-include ('./partials/footer'); %>
